create table test.student (
    id serial primary key ,
    full_name varchar(50) ,
    gender  text ,
    birth_year date ,
    major varchar(50),
    gpa float


);


insert into test.student (full_name, gender, birth_year, major, gpa)
values
    ('John Doe', 'Male', '1990-01-01', 'Computer Engineering', 3.8),
    ('Jane Smith', 'Female', '1992-05-15', 'Business Management', 3.5),
    ('Alice Lee', 'Female', '1991-08-20', 'Art History', 3.9),
    ('Bob Green', 'Male', '1993-12-10', 'Physics', 3.7),
    ('Eva White', 'Female', '1994-03-25', 'Math', 4.0);

-- Cập nhật GPA cho “Lê Quốc Cường”

update test.student s
set gpa = 3.4
where id = 3 ;

-- xoa du lieu co gpa is null

delete
from test.student s
where gpa is null

-- hien thi sin vien nganh cntt cos gpa >= 3.0 , chi lay 3 ket qua dau tien

select id, full_name
from test.student s
where major ='Math' and gpa >= 3.0
order by id
limit 3

-- liet ke danh dach snganh hocj di nhat

select distinct major
from test.student s
where major is null
order by major

-- Hiển thị sinh viên ngành CNTT, sắp xếp giảm dần theo GPA, sau đó tăng dần theo tên

select id, full_name
from test.student s
where major = 'Math'
order by gpa desc ,
         full_name asc ;


--  Tìm sinh viên có tên bắt đầu bằng “Nguyễn”

select id, full_name
from test.student s
where full_name ilike 'John%'

-- hien thi sian ven ci namw sinh tu 2001 den 2004
select id , full_name 
from test.student s
where birth_year between 2001 and 2003
order by birth_year , full_name